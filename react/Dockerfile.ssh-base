FROM ubuntu:24.04 AS base

ARG DEBIAN_FRONTEND=noninteractive
ARG TZ=Asia/Taipei

ENV LANG=C.UTF-8
ENV LC_ALL=C.UTF-8
ENV TZ=${TZ}

RUN apt-get update && \
    apt-get install -y --no-install-recommends \
        openssh-client \
        ca-certificates && \
    apt-get clean && \
    rm -rf /var/lib/apt/lists/*

HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
    CMD ssh -V || exit 1

LABEL description="Minimal SSH base image" \
      version="1.0"

CMD ["/bin/bash"]